{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Incident List",
      "weight": "Bolder",
      "size": "Medium",
      "wrap": true
    },
    {
      "$data": "${result}",
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${number}",
              "wrap": true,
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${short_description}",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "View/Update",
                  "data": {
                    "msteams": {
                    "type": "imback",
                    "value": "Get details for incident with sys_id ${sys_id} and summarize the response in narrative form."
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}

